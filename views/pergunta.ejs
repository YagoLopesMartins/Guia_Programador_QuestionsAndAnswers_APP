<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %>
   <div class="container">
    <h1><%= pergunta.titulo %></h1>    
    <p><%= pergunta.descricao %></p>
    <hr>
    <form action="/responder" method="POST">
        <h3>Responda</h3>
        <label for="">Resposta</label>
        <textarea name="corpo" id="" cols="30" rows="10" class="form-control"></textarea>
        <br>
        <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
        <button type="submit" class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <h3>Todas as respostas da pergunta</h3>
    <hr>
    <% respostas.forEach(resposta => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <p><%= resposta.corpo %></p> 
            </div>
        </div>
         
    <% }) %>

   </div>
</body>
<%- include('partials/footer') %>